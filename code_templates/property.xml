			<hint>
				property name
			</hint>
		</point>
		<point name="type">
			<text>
				type
			</text>
			<script language="Delphi" onenter="true" onleave="false">
				
			</script>
			<hint>
				property type
			</hint>
		</point>
		<description>
			property declaration
		</description>
		<author>
			Tecsystem
		</author>
		<code language="Delphi" context="methodbody" delimiter="|"><![CDATA[property |name|: |type| read Get|name| write Set|name|;|end|]]>
